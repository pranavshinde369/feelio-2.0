# Feelio Environment Configuration
# Copy this file to .env and fill in your values

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
APP_ENV=development
DEBUG_MODE=False
LOG_LEVEL=INFO

# Audio Settings
MICROPHONE_INDEX=0
SPEECH_TIMEOUT=5
SPEECH_PHRASE_LIMIT=10
AMBIENT_NOISE_DURATION=1

# Vision Settings (Optional)
CAMERA_INDEX=0
USE_VISION=False

# Model Configuration
MODEL_NAME=gemini-2.5-flash
RESPONSE_MAX_LENGTH=3

# Safety & Privacy
ENABLE_SAFETY_NET=True
LOG_SESSIONS=False
SESSION_LOGS_PATH=./session_logs/

# Output Settings
TTS_LANGUAGE=en
TTS_SLOW_MODE=False
